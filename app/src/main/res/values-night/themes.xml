<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PokeFavs" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/grey_900</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="actionBarTheme">@style/MyActionBarStyle</item>
    </style>

    <style name="MyActionBarStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/grey_900</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/grey_900</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_pikachu</item>
        <item name="windowSplashScreenAnimationDuration">10000</item>
        <item name="postSplashScreenTheme">@style/Theme.PokeFavs</item>
    </style>

    <style name="Pokedex">
        <item name="android:background">@color/grey_900</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/grey_900</item>
        <item name="itemIconTint">@drawable/bottom_navigation_colors_night</item>
        <item name="itemTextColor">@drawable/bottom_navigation_colors_night</item>
    </style>

    <style name="collapsingToolbar">
        <item name="contentScrim">@color/grey_900</item>
        <item name="android:background">@color/grey_900</item>
    </style>

    <style name="bottomsDetails">
        <item name="tint">@color/white</item>
    </style>

    <style name="tabsLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/grey_900</item>
        <item name="tabTextColor">@color/grey_400</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardViewStyle" parent="Base.CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="ImageBackgroundCard">
        <item name="android:layout_marginEnd">-20dp</item>
        <item name="android:alpha">0.20</item>
        <item name="android:src">@drawable/ic_pokeball</item>
        <item name="tint">@color/black</item>
    </style>
</resources>