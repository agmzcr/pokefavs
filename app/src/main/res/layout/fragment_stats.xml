<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="dev.agmzcr.pokefavs.ui.details.DetailsViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/Pokedex"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        tools:context=".ui.details.stats.StatsFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hp_title"
                    style="@style/TextStyle"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="HP"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/hp_value_TV"
                    style="@style/TextStyle"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{String.valueOf(vm.pokemonDetailsData2.stats[0].base_stat)}"
                    android:textSize="17sp" />

                <ProgressBar
                    android:id="@+id/progressBarHP"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="4"
                    android:indeterminate="false"
                    android:max="200"
                    android:progress="@{vm.pokemonDetailsData2.stats[0].base_stat}"
                    android:progressTint="@color/poke_red"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/atk_title"
                    style="@style/TextStyle"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="Attack"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/atk_value_TV"
                    style="@style/TextStyle"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{String.valueOf(vm.pokemonDetailsData2.stats[1].base_stat)}"
                    android:textSize="17sp" />

                <ProgressBar
                    android:id="@+id/progressBarATK"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="4"
                    android:indeterminate="false"
                    android:max="200"
                    android:progress="@{vm.pokemonDetailsData2.stats[0].base_stat}"
                    android:progressTint="@color/poke_red"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/def_title"
                    style="@style/TextStyle"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="Defence"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/def_value_TV"
                    style="@style/TextStyle"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(vm.pokemonDetailsData2.stats[2].base_stat)}"
                    android:gravity="center"
                    android:textSize="17sp" />

                <ProgressBar
                    android:id="@+id/progressBarDEF"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="4"
                    android:indeterminate="false"
                    android:max="200"
                    android:progress="@{vm.pokemonDetailsData2.stats[2].base_stat}"
                    android:progressTint="@color/poke_red"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/special_atk_title"
                    style="@style/TextStyle"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="Sp. Atk"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/special_atk_value_TV"
                    style="@style/TextStyle"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{String.valueOf(vm.pokemonDetailsData2.stats[3].base_stat)}"
                    android:textSize="17sp" />

                <ProgressBar
                    android:id="@+id/progressBarSPATK"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="4"
                    android:indeterminate="false"
                    android:max="200"
                    android:progress="@{vm.pokemonDetailsData2.stats[3].base_stat}"
                    android:progressTint="@color/poke_red"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/special_def_title"
                    style="@style/TextStyle"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="Sp. Def"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/special_def_value_TV"
                    style="@style/TextStyle"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{String.valueOf(vm.pokemonDetailsData2.stats[4].base_stat)}"
                    android:textSize="17sp" />

                <ProgressBar
                    android:id="@+id/progressBarSPDEF"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="4"
                    android:indeterminate="false"
                    android:max="200"
                    android:progress="@{vm.pokemonDetailsData2.stats[4].base_stat}"
                    android:progressTint="@color/poke_red"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/spd_title"
                    style="@style/TextStyle"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="Speed"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/spd_value_TV"
                    style="@style/TextStyle"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{String.valueOf(vm.pokemonDetailsData2.stats[5].base_stat)}"
                    android:textSize="17sp" />

                <ProgressBar
                    android:id="@+id/progressBarSPD"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="4"
                    android:indeterminate="false"
                    android:max="200"
                    android:progress="@{vm.pokemonDetailsData2.stats[5].base_stat}"
                    android:progressTint="@color/poke_red"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/exp_title"
                    style="@style/TextStyle"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="B. Exp"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/exp_value_TV"
                    style="@style/TextStyle"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{String.valueOf(vm.pokemonDetailsData2.base_experience)}"
                    android:textSize="17sp" />

                <ProgressBar
                    android:id="@+id/progressBarEXP"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="4"
                    android:indeterminate="false"
                    android:max="200"
                    android:progress="@{vm.pokemonDetailsData2.base_experience}"
                    android:progressTint="@color/poke_red"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>